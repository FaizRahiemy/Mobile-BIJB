<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include
        android:id="@+id/toolbar_profile"
        layout="@layout/toolbar_menu" />
    <LinearLayout
        android:id="@+id/layut_saldo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_below="@+id/toolbar_profile"
        android:background="@drawable/toolbar_background"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_wallet"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:textColor="#fff"
            android:text="Saldo : "/>
        <TextView
            android:id="@+id/tx_saldo_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:textColor="#fff"
            android:text="0"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layut_saldo">
        <LinearLayout
            android:id="@+id/layout_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/txinput_nama_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <EditText
                    android:id="@+id/edt_nama_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#6b000000"
                    android:textColor="#000"
                    android:singleLine="true"
                    android:backgroundTint="#6b000000"
                    android:inputType="text"
                    android:hint="Name"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/txinput_email_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <EditText
                    android:id="@+id/edt_email_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#6b000000"
                    android:textColor="#000"
                    android:singleLine="true"
                    android:backgroundTint="#6b000000"
                    android:inputType="textEmailAddress"
                    android:hint="Email"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/txinput_password_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true"
                android:layout_marginTop="10dp">
                <EditText
                    android:id="@+id/edt_password_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#6b000000"
                    android:textColor="#000"
                    android:singleLine="true"
                    android:backgroundTint="#6b000000"
                    android:inputType="textPassword"
                    android:hint="Password"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/txinput_cpassword_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true"
                android:layout_marginTop="10dp">
                <EditText
                    android:id="@+id/edt_cpassword_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#6b000000"
                    android:textColor="#000"
                    android:singleLine="true"
                    android:backgroundTint="#6b000000"
                    android:inputType="textPassword"
                    android:hint="Confirm Password"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/txinput_pin_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true"
                android:layout_marginTop="10dp">
                <EditText
                    android:id="@+id/edt_pin_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#6b000000"
                    android:textColor="#000"
                    android:singleLine="true"
                    android:maxLength="6"
                    android:backgroundTint="#6b000000"
                    android:inputType="textPassword|number"
                    android:hint="Pin"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/txinput_cpin_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true"
                android:layout_marginTop="10dp">
                <EditText
                    android:id="@+id/edt_cpin_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#6b000000"
                    android:textColor="#000"
                    android:singleLine="true"
                    android:maxLength="6"
                    android:backgroundTint="#6b000000"
                    android:inputType="textPassword|number"
                    android:hint="Confirm Pin"/>
            </android.support.design.widget.TextInputLayout>
            <Button
                android:id="@+id/btn_update_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_background"
                android:textColor="#fff"/>
            <Button
                android:id="@+id/btn_topup_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Topup Saldo"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_background"
                android:textColor="#fff"/>
            <Button
                android:id="@+id/btn_transaksi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Daftar Transaksi"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_background"
                android:textColor="#fff"/>
        </LinearLayout>
    </ScrollView>
    <include
        layout="@layout/progress_loading"/>
</RelativeLayout>