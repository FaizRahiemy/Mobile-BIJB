<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
    android:id="@+id/swipe_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_title_headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="#333333"
                android:text="title"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"/>
            <ImageView
                android:id="@+id/img_headline"
                android:layout_width="match_parent"
                android:layout_height="149dp"
                android:layout_marginTop="20dp"
                android:background="@color/gray"
                android:layout_marginHorizontal="20dp"/>
            <TextView
                android:id="@+id/txt_isi_headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="#333333"
                android:text="isi berita"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/btn_bacaselengkapnya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:text="Baca Selengkapnya.."
                    android:layout_alignParentEnd="true"
                    android:layout_marginHorizontal="20dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_berita"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:nestedScrollingEnabled="true"
                android:layout_marginBottom="20dp"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.v4.widget.SwipeRefreshLayout>