<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">
    <LinearLayout
        android:id="@+id/layout_kiri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tx_tgl_parking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="Tanggal"/>
        <TextView
            android:id="@+id/tx_kendaraan_parking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textStyle="bold"
            android:text="Kendaraan"/>
        <TextView
            android:id="@+id/tx_durasi_parking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="Durasi"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tx_status_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textColor="#fff"
            android:background="@drawable/done_background"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:text="DONE"/>
        <TextView
            android:id="@+id/tx_status_booked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textColor="#fff"
            android:background="@drawable/booked_background"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:text="BOOKED"/>
        <TextView
            android:id="@+id/tx_status_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textColor="#fff"
            android:background="@drawable/on_background"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:text="ON PARKING"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/layout_kiri"
        android:background="@color/colorAccent"/>
</RelativeLayout>